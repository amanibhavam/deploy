---
apiVersion: argoproj.io/v1alpha1
kind: AppProject
metadata:
  name: mean
  namespace: argocd
spec:
  sourceRepos:
  - '*'
  destinations:
  - namespace: '*'
    server: '*'
  clusterResourceWhitelist:
  - group: '*'
    kind: '*'
  orphanedResources:
    warn: false
    ignore:
    - group: cilium.io
      kind: CiliumIdentity
---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: dev--mean
  namespace: argocd
spec:
  project: mean
  source:
    repoURL: 'https://github.com/amanibhavam/dev'
    path: mean
    targetRevision: 0.0.2
  destination:
    name: in-cluster
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
